CODE SEGMENT
ASSUME CS:CODE

START:
    MOV SI,1500H      ; Base address of data
    MOV CL,[SI]       ; CL = total count of numbers
    DEC CL            ; Outer loop = count - 1

OUTER:
    MOV SI,1500H
    MOV CH,[SI]       ; CH = count of numbers
    DEC CH            ; Inner loop = count - 1
    INC SI            ; Point to first data element (1501H)

INNER:
    MOV AL,[SI]       ; AL = current number
    INC SI
    CMP AL,[SI]       ; Compare AL with next number
    JNC NEXT          ; If AL >= [SI], no swap needed (descending order)
    XCHG AL,[SI]      ; Otherwise, swap values
    DEC SI
    MOV [SI],AL       ; Store swapped value back
    INC SI

NEXT:
    DEC CH
    JNZ INNER         ; Repeat inner loop
    DEC CL
    JNZ OUTER         ; Repeat outer loop

    INT 3             ; Stop program

CODE ENDS
END START
